{
  "expo": {
    "name": "kidizy",
    "slug": "kidizy",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/KidizyLogo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/KidizyLogo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
       "plugins": [
      [
        "expo-font",
        {
          "fonts": ["./assets/fonts/Montserrat-VariableFont_wght.ttf"],
          "android": {
            "fonts": [
              {
                "fontFamily": "Source Serif 4",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/Montserrat-VariableFont_wght.ttf",
                    "weight": 800
                  }
                ]
              }
            ]
          }
        }
      ]
    ]
  }
}
